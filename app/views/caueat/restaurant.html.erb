<div class="container" style="align:center;">
    <h3 class="center-align">중앙대 밥집?</h3>
      <div class="row">
        <div class="col s12">
          <div class="card grey lighten-2">
            <div class="card-content black-text">
              <h2 class="center-align"><%= @restaurant.title %></h2>
            </div>
            <div class="card-action">
                <a class="waves-effect waves-light btn-large" href="/">뭐먹지?</a>
                <a class="waves-effect waves-light btn-large" href="/caueat/pub">술집은?</a>
            </div>
          </div>
          <div class="row">
            <div class="col s12">
              <div class="card blue-grey darken-1">
                <div class="card-action">
                  <form class="col s12" action="/caueat/restaurantcomment" method="POST">
                    <input type="hidden" value="<%= @restaurant.id %>" name="id_of_restaurant">
                    <div class="input-field col s3">
                      <input value="익명" placeholder="익명" id="restaurant_writer" name="writer" type="text" class="validate">
                      <label class="active" for="restaurant_writer">작성자</label>
                    </div>
                    <div class="input-field col s8">
                      <input placeholder="맛있어요!" id="restaurant_content" name="content" type="text" class="validate">
                      <label class="active" for="restaurant_content">댓글</label>
                    </div>
                    <button class="btn waves-effect waves-light" type="submit" name="action" style="float:right;">Submit</button>
                  </form>
                </div>
                <% @restaurant.restaurantcomments.each do |r| %>
                <div class="card-content white-text">
                  <span class="card-title"><%= r.writer %></span>
                  <p><%= r.content %></p>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
</div>